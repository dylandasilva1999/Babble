<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TermsConditionsActivity"
    android:background="@color/yellow">

    <ImageView
        android:id="@+id/tc_image"
        android:layout_width="433dp"
        android:layout_height="362dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tc_image" />

    <TextView
        android:id="@+id/tc_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/source_sans_pro_bold"
        android:text="Terms &amp; Conditions"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tc_image" />

    <TextView
        android:id="@+id/tc_one"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/open_sans_regular"
        android:text="Subject to your agreement to and compliance with the terms of this Agreement, we grant to you a non-exclusive, non-transferable, non-sharable, revocable, limited license to use the Services, solely for personal, non-commercial use to the Services in accordance with the agreement."
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tc_heading" />

    <TextView
        android:id="@+id/tc_two"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/open_sans_regular"
        android:text="Your privacy matters to us. You can learn more about the Policy by going to our website."
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tc_one" />

    <ImageView
        android:id="@+id/wy_exit"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginTop="50dp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tc_two"
        app:srcCompat="@drawable/wy_exit" />


</androidx.constraintlayout.widget.ConstraintLayout>